# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/livenote"

# Auth (Better Auth)
BETTER_AUTH_SECRET="your-secret-key-here"
BETTER_AUTH_URL="http://localhost:3000"

# App URL (for client-side auth)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# OpenAI (for LLM/STT)
OPENAI_API_KEY="your-openai-api-key"

# Google Cloud Speech-to-Text
# Option 1: Path to service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account.json"
# Option 2: JSON content directly (for deployment)
# GOOGLE_APPLICATION_CREDENTIALS_JSON='{"type":"service_account",...}'

# Speech WebSocket Server (for Google Speech)
SPEECH_WS_PORT=3001
NEXT_PUBLIC_SPEECH_WS_URL="ws://localhost:3001"

# AmiVoice Cloud Platform
# APPKEY with "can issue APPKEY" permission
AMIVOICE_APPKEY="your-appkey"
